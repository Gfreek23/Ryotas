<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hospital"
            android:padding="30dp"
            android:src="@drawable/baseline_local_hospital_24"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BANK"
            android:padding="30dp"
            android:src="@drawable/baseline_local_atm_24"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Res"
            android:padding="30dp"
            android:src="@drawable/baseline_food_bank_24"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/store"
            android:padding="30dp"
            android:src="@drawable/baseline_local_convenience_store_24"/>


    </LinearLayout>



    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapSearch"
        android:id="@+id/map2"
        android:layout_below="@id/linearLayout"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/activity_map_search" />

</RelativeLayout>
