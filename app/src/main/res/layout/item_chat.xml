<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatUserProfilePicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_baseline_account_circle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chatNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/chatUserProfilePicture"
            android:fontFamily="@font/gabarito_medium"
            android:text="Chat name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recentMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatNameTextView"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/chatUserProfilePicture"
            android:fontFamily="@font/gabarito_regular"
            android:text="Recent message"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recentMessageTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatNameTextView"
            android:layout_toEndOf="@id/recentMessageTextView"
            android:fontFamily="@font/gabarito_regular"
            android:text="Recent message time"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>